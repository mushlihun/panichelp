<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?android:attr/selectableItemBackground"
    android:padding="@dimen/md_keylines"
    android:onClick="yesno">

    <ImageView
        android:id="@+id/amb_avatar"
        android:layout_width="@dimen/avator_size"
        android:layout_height="@dimen/avator_size"
        android:scaleType="centerCrop"
        tools:src="@drawable/ambulance1_01" />

    <TextView
        android:id="@+id/amb_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/md_keylines"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@+id/yesno"
        android:layout_toRightOf="@+id/amb_avatar"
        tools:text="Ambulance 1"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="@dimen/article_subheading" />

    <TextView
        android:id="@+id/loc_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/amb_name"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="@dimen/md_keylines"
        android:layout_toRightOf="@+id/amb_avatar"
        android:layout_toLeftOf="@+id/yesno"
        android:textColor="@color/medium_grey"
        android:ellipsize="end"
        android:singleLine="true"
        tools:text="Dalam perjalanan ke Jl. Mangga 20"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="@dimen/list_body" />
    <ImageButton
        android:id="@+id/yesno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        tools:src="@drawable/squares"/>
</RelativeLayout>