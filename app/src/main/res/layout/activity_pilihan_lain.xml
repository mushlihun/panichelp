<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:id="@+id/box1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/box2"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape"
            android:onClick="menuBidanClick"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bidanPic"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/bidan_01" />

            <TextView
                android:id="@+id/bidan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Bidan"
                android:textColor="#b7b7b7"
                android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/box2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/box1"
            android:background="@drawable/shape"
            android:weightSum="1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_alignRight="@+id/box4"
            android:layout_alignEnd="@+id/box4">

            <ImageView
                android:id="@+id/tukangUrutPic"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:layout_weight="0.86"
                android:src="@drawable/ic_add" />

            <TextView
                android:id="@+id/tukangUrut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Tukang Urut"
                android:textColor="#b7b7b7"
                android:textSize="20sp"
                tools:layout_centerInParent="true"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/box3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/box1"
            android:layout_margin="20dp"
            android:background="@drawable/shape">

            <ImageView
                android:id="@+id/khitanPic"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_add" />

            <TextView
                android:id="@+id/khitan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Khitan"
                android:textColor="#b7b7b7"
                android:textSize="20sp"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/box4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/box2"
            android:layout_toRightOf="@+id/box3"
            android:onClick="menuAmbulanClick"
            android:layout_margin="20dp"
            android:background="@drawable/shape">

            <ImageView
                android:id="@+id/ambulansPic"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/ambulance1_01" />

            <TextView
                android:id="@+id/ambulansTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Ambulans"
                android:textColor="#b7b7b7"
                android:textSize="20sp"
                android:gravity="center"/>
        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>
